<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/image_bg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="moodscanner.example.raggitha.moodscanner.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:textStyle="bold"
        android:text="Mood Scanner"
        android:layout_centerHorizontal="true"
        android:textColor="#f6f7d1"
        android:textSize="34sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textExplain"
        android:textStyle="bold"
        android:text="Press and hold to reveal your Mood"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_below="@+id/titleText"
        android:textSize="16sp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="304dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/finger_bg"
        android:id="@+id/bgScanner"
        android:layout_below="@+id/textExplain" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="304dp"
        android:src="@drawable/thumbprint2"
        android:layout_centerHorizontal="true"
        android:id="@+id/thumbPrint"
        android:layout_below="@id/textExplain"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thumbPrint"
        android:text="Your Mood:"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:id="@+id/resultText"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#f6f7d1"/>
</RelativeLayout>
